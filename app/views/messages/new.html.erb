<div class="container min-vh-100 py-5" id="contact">
  <div class="col">
    <div class="col">
      <div class="p-5">
        <div class="text-center">
          <div class="row">
            <p class="h1">Contact</p>
          </div>
          <div class="line"></div>
          <div class="row">
            <p class="fs-4 mt-4">Contact me via the form below and 
            I will get respond as soon as possible.</p>
          </div>
        </div>
      </div>
    </div>

    <div class="col container" id="form">
      <div class="form-padding">
        <div class="bg-light rounded">
          <div class="shadow p-3 mb-5 rounded">

            <%= turbo_frame_tag "response" do %>

              <div class="">
                <%= form_with model: @message, class: "needs-validation" do |form| %>
                  <div class="p-3">
                    <%= form.label "Name:" %>
                    <%= form.text_field :name, class: "form-control p-3", required: true %>
                    <div class="valid-feedback">Valid.</div>
                    <div class="invalid-feedback">Please fill out this field.</div>
                  </div>

                  <div class="p-3">
                    <%= form.label "Email:" %>
                    <%= form.email_field :email, class: "form-control p-3", required: true  %>
                  </div>

                  <div class="p-3">
                    <%= form.label "Message:" %>
                    <%= form.text_area :description, class: "form-control p-3", rows: "6", required: true %>
                    <div class="valid-feedback">Valid.</div>
                    <div class="invalid-feedback">Please fill out this field.</div>
                  </div>

                  <div class="mt-3 d-flex justify-content-end">
                    <%= form.submit "Submit", class: "btn btn-success px-5 py-2" %>
                  </div>

                  <% if @message.errors.any? %>
                    <div class="p-5">
                      <h2><%= pluralize(@message.errors.count, "error") %> prohibited this article from being saved:</h2>

                      <ul>
                        <% @message.errors.each do |error| %>
                          <li class="pt-2 text-danger"><%= error.full_message %></li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %>


                <% end %>
              </div>

            <% end %>

          </div>
        </div>
      </div>
    </div>

  </div>
</div>
